<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical"
    tools:context=".ui.home.SearchActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F8F8F8"
            android:orientation="vertical"
            tools:context=".ui.home.SearchActivity">

            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="16dp"
                android:background="@drawable/circle_rectangle_ffffff_5">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_add_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="+ 添加收货地址"
                    android:textColor="#ff666666"
                    android:textSize="15sp"
                    />
                <ImageView
                    android:id="@+id/img_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:src="@drawable/icon_address" />

                <LinearLayout
                    android:id="@+id/linear_title"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_toLeftOf="@+id/img_header_arrow"
                    android:layout_toRightOf="@id/img_address"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/color_141414"
                            android:textSize="@dimen/sp_18"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_phone_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/sp_14" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_address1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:text=""
                        android:textColor="@color/color_141414"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/img_header_arrow"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_13"
                    android:paddingBottom="@dimen/dp_20"
                    android:src="@drawable/icon_arrow_right" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rely"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_title"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="21dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/circle_rectangle_ffffff_5"
                android:paddingBottom="27dp">


                <LinearLayout
                    android:id="@+id/ll_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_17"
                    android:layout_marginRight="@dimen/dp_16"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_cover"
                        android:layout_width="@dimen/dp_114"
                        android:layout_height="66dp"
                         />

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_title"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:layout_toRightOf="@id/iv_cover"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_title"
                            android:ellipsize="end"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="#ff141414"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_pirce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_title"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="25dp"
                            android:layout_marginRight="20.5dp"
                            android:includeFontPadding="false"
                            android:textColor="#ffe91e14"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/ll_1"
                    android:layout_marginLeft="15.5dp"
                    android:layout_marginTop="21dp"
                    android:layout_marginRight="12dp"
                    android:background="#DDDDDD" />

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_marginLeft="19.5dp"
                    android:layout_marginTop="17dp"
                    android:includeFontPadding="false"
                    android:text="有效期"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="12.5dp"
                    android:includeFontPadding="false"
                    android:textColor="#ff666666"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_1"
                    android:layout_marginLeft="19.5dp"
                    android:layout_marginTop="14dp"
                    android:includeFontPadding="false"
                    android:text="优惠券"
                    android:textColor="#ff333333"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/linear_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_1"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="14dp"
                    android:paddingRight="12.5dp"

                    >

                    <TextView
                        android:id="@+id/tv_coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:textColor="#ffd1323b"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="8dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/icon_arrow_right" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rely_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear_coupon"
                    android:layout_marginTop="@dimen/dp_14"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="12.5dp">

                    <TextView
                        android:id="@+id/tv_gift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="19.5dp"
                        android:drawableRight="@drawable/icon_gift"
                        android:drawablePadding="@dimen/dp_5"
                        android:includeFontPadding="false"
                        android:text="赠课"
                        android:textColor="#ff333333"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/img_arrow2"
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="@dimen/dp_15"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_arrow_right" />

                    <TextView
                        android:id="@+id/tv_course_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_8"
                        android:layout_toLeftOf="@+id/img_arrow2"
                        android:textColor="#ff666666"
                        android:textSize="15sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@+id/rely_3"
                    android:layout_marginTop="14dp"
                    android:paddingLeft="19.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <TextView
                        android:id="@+id/tv_2"

                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="积分抵扣可抵扣"
                        android:textColor="#ff333333"
                        android:textSize="15sp"
                        />
                    <ImageView
                        android:layout_marginLeft="4dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_2"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:background="@drawable/icon_jifen"
                        />

                    <ImageView
                        android:id="@+id/iv_jifen"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/icon_select"
                        />

                </RelativeLayout>
            </RelativeLayout>

            <include
                android:id="@+id/rely_2"
                layout="@layout/layout_order_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rely"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"

                />

            <include
                android:id="@+id/rely3"
                layout="@layout/layout_order_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rely_2"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"

                />

            <LinearLayout
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@+id/rely3"

                android:layout_marginRight="16dp">

                <LinearLayout
                    android:id="@+id/linear_xieyi"
                    android:paddingLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="7dp">

                    <ImageView
                        android:id="@+id/iv_xieyi"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/bg_999999_rectangle" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:includeFontPadding="false"
                    android:text="已阅读并同意"
                    android:textColor="#ff666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_xieyi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:includeFontPadding="false"
                    android:text="《课程购买协议》"
                    android:textColor="#5F7DFF"
                    android:textSize="12sp" />

            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <include
        layout="@layout/layout_order_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</LinearLayout>