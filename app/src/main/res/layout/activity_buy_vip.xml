<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_vip"
    android:fitsSystemWindows="true"
    tools:context=".ui.home.SortGuideActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingBottom="75dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dp_33"
                android:layout_height="@dimen/dp_60"
                android:layout_marginLeft="16dp"
                android:src="@drawable/icon_arrow_lift"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/tv"
                android:text="问答会员"
                android:textColor="#ffffffff"
                android:textSize="19sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/img_back"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="157dp"
                android:background="@drawable/icon_bug_vip"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="42.5dp"
                app:layout_constraintTop_toBottomOf="@+id/tv"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constra"
                android:layout_marginTop="40dp"
                android:paddingLeft="16dp"
                android:background="#ffffff"
                app:layout_constraintTop_toBottomOf="@+id/img"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                >
                <TextView
                    android:id="@+id/tv_price_1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="@+id/rely_1"
                    app:layout_constraintRight_toRightOf="@+id/rely_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="低至39.9/月"
                    android:background="@drawable/bg_ffb060_c15_2"
                    android:textColor="#ffffffff"
                    android:textSize="11sp"
                    android:padding="6.5dp"
                    />
                <TextView
                    android:id="@+id/tv_price_2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="@+id/rely_2"
                    app:layout_constraintRight_toRightOf="@+id/rely_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="低至39.9/月"
                    android:background="@drawable/bg_ffb060_c15_2"
                    android:textColor="#ffffffff"
                    android:textSize="11sp"
                    android:padding="6.5dp"
                    />
            <RelativeLayout
                android:id="@+id/rely_1"
                android:layout_marginRight="15.5dp"
                android:layout_width="0dp"
                android:layout_marginTop="11dp"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="117dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/rely_2"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/circle_rectangle_fef7f0_5"
                >
                <TextView
                    android:id="@+id/tv_1"
                    android:layout_marginTop="24.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffdc4f35"
                    android:textSize="24sp"
                    />
                <TextView
                    android:id="@+id/tv_1_1"
                    android:layout_below="@+id/tv_1"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="尊享会员/月"
                    android:textColor="#ffdc684b"
                    android:textSize="15sp"
                    />
            </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rely_2"
                    android:layout_marginRight="15.5dp"
                android:layout_width="0dp"
                android:layout_marginTop="11dp"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="117dp"
                app:layout_constraintLeft_toRightOf="@id/rely_1"
                app:layout_constraintRight_toLeftOf="@id/rely_3"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/circle_rectangle_f5f5f5_5"
                >
                <TextView
                    android:id="@+id/tv_2"
                    android:layout_marginTop="24.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ff333333"
                    android:textSize="24sp"
                    />
                <TextView
                    android:id="@+id/tv_2_2"
                    android:layout_below="@+id/tv_2"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="尊享会员3个月"
                    android:textColor="#ff666666"
                    android:textSize="15sp"
                    />
            </RelativeLayout><RelativeLayout
                android:id="@+id/rely_3"
                android:layout_marginRight="15.5dp"
                android:layout_width="0dp"
                android:background="@drawable/circle_rectangle_f5f5f5_5"
                android:layout_marginTop="11dp"
                app:layout_constraintLeft_toRightOf="@id/rely_2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="117dp"
                app:layout_constraintTop_toTopOf="parent"
                >
                <TextView
                    android:id="@+id/tv_3"
                    android:layout_marginTop="24.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ff333333"
                    android:textSize="24sp"
                    />
                <TextView
                    android:id="@+id/tv_3_3"
                    android:layout_below="@+id/tv_3"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="尊享会员1年"
                    android:textColor="#ff666666"
                    android:textSize="15sp"
                    />
            </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:id="@+id/view"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/constra"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F8F8F8"
                />
            <LinearLayout
                android:id="@+id/linear"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_rectangle_ffffff_5"
                android:orientation="vertical"

                android:paddingLeft="19.5dp"
                android:paddingRight="15.5dp"
                android:paddingBottom="27dp"
                >
                <TextView
                    android:layout_marginTop="19dp"
                    android:textStyle="bold"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择支付渠道"
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    />
                <RelativeLayout
                    android:layout_marginTop="17.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <ImageView
                        android:id="@+id/iv_1"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_alipay"
                        />
                    <TextView
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@+id/iv_1"
                        android:includeFontPadding="false"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付宝支付"
                        android:textColor="#ff333333"
                        android:textSize="15sp"
                        />
                    <ImageView
                        android:id="@+id/iv_alipay"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/icon_select"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <ImageView
                        android:id="@+id/iv_2"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_wxpay"
                        />
                    <TextView
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@+id/iv_2"
                        android:includeFontPadding="false"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信支付"
                        android:textColor="#ff333333"
                        android:textSize="15sp"
                        />
                    <ImageView
                        android:id="@+id/ic_wxpay"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/icon_select"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <ImageView
                        android:id="@+id/iv_3"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_jdpay"
                        />
                    <TextView
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@+id/iv_3"
                        android:includeFontPadding="false"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="京东支付"
                        android:textColor="#ff333333"
                        android:textSize="15sp"
                        />
                    <ImageView
                        android:id="@+id/iv_jdpay"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/icon_select"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <ImageView
                        android:id="@+id/iv_4"
                        android:layout_width="14dp"
                        android:layout_height="9dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_wypay"
                        />
                    <TextView
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@+id/iv_4"
                        android:includeFontPadding="false"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="网银支付"
                        android:textColor="#ff333333"
                        android:textSize="15sp"
                        />
                    <ImageView
                        android:id="@+id/iv_wypay"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/icon_select"
                        />
                </RelativeLayout>



            </LinearLayout>
            <View
                android:id="@+id/view1"
                app:layout_constraintTop_toBottomOf="@id/linear"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F8F8F8"
                />
            <LinearLayout
                android:id="@+id/linear_2"
                android:layout_marginRight="16dp"
                app:layout_constraintTop_toBottomOf="@id/view1"
                app:layout_constraintLeft_toLeftOf="parent"

                android:layout_below="@+id/rely3"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                >
                <LinearLayout
                    android:id="@+id/linear_xieyi"
                    android:paddingLeft="16dp"
                    android:paddingRight="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_xieyi"
                        android:layout_gravity="bottom"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="@drawable/icon_xieyi_false1"
                        />
                </LinearLayout>
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="同意并签署"
                    android:textColor="#ff666666"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/tv_xieyi"
                    android:gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:includeFontPadding="false"
                    android:text="《用户协议》"
                    android:textColor="#5F7DFF"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="与"
                    android:textColor="#ff666666"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/tv_xieyi1"
                    android:gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:includeFontPadding="false"
                    android:text="《隐私政策》"
                    android:textColor="#5F7DFF"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_botton"
                android:gravity="center"
                android:layout_marginTop="40dp"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear_2"
                android:background="@drawable/bg_5f7dff_c5"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="立即开通"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>