<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.my.MyExchangeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_E5E6F7"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_21"
            android:text="请输入兑换码："
            android:textColor="@color/color_141414"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/my_exchange_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51"
            android:layout_marginLeft="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_21"
            android:background="@drawable/circle_rectangle_ffffff_5"
            android:hint="请输入兑换码"
            android:paddingLeft="@dimen/dp_15"
            android:textColor="@color/color_717171"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/my_exchange_query"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_44"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_marginBottom="@dimen/dp_22"
            android:background="@drawable/circle_rectangle_5f7dff_5"
            android:gravity="center"
            android:text="查询"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/exchange_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_27"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/exchange_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:text="注册会计师—考前刷题集训班"
            android:textColor="@color/color_141414"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/exchange_second_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:text="考点+好题、口诀+联想、重新认识初级会计"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">

            <TextView
                android:id="@+id/exchange_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥998"
                android:textColor="@color/color_E85050"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="（支持京东白条）"
                android:textColor="@color/color_F6741B"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@color/color_DDDDDD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/my_gift" />

            <TextView
                android:id="@+id/exchange_give_course_names"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="初级财务课程 x1"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@color/color_DDDDDD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程截止日期"
                android:textColor="@color/color_A3A3A3"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/exchange_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center_vertical"
                android:text="2022年5月31日"
                android:textColor="@color/color_424242"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/color_F8F8F8" />

        <TextView
            android:id="@+id/exchange_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_marginRight="@dimen/dp_16"
            android:gravity="center_vertical"
            android:text="兑换码有效期：2021-02-11～20"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>

    <TextView
        android:id="@+id/exchange_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_60"
        android:background="@drawable/circle_rectangle_5f7dff_5"
        android:gravity="center"
        android:text="确认兑换"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        android:visibility="gone" />

</LinearLayout>