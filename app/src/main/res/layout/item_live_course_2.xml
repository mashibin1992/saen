<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_cover"
        android:layout_width="@dimen/dp_143"
        android:layout_height="@dimen/dp_81"
        android:layout_marginLeft="@dimen/dp_16"
        android:src="@drawable/select_course_item_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_alignTop="@+id/img_cover"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_toRightOf="@+id/img_cover"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:drawableRight="@drawable/icon_arrow_right"
            android:drawablePadding="@dimen/dp_40"
            android:layout_weight="1"
            android:text="中级零基础《初级会计实务》会计科目及借"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>


