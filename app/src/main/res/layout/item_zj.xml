<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv"
        android:layout_marginLeft="33.5dp"
        android:layout_marginTop="16dp"
        android:layout_width="36.5dp"
        android:layout_height="36.5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tv_item_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv"
        android:layout_marginTop="14.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="谢敏回答了问题"
        android:layout_marginLeft="5.5dp"
        android:textColor="#ff7d7d7d"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/tv_titme"
        android:layout_marginLeft="5.5dp"
        app:layout_constraintLeft_toRightOf="@+id/iv"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_name"
        android:layout_marginTop="2.5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021-09-22"
        android:textColor="#ff999999"
        android:textSize="12sp"
        />


    <TextView
        android:id="@+id/tv_quest_content"
        app:layout_constraintLeft_toRightOf="@+id/iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_titme"
        android:layout_marginTop="9dp"
        android:layout_width="0dp"
        android:layout_marginLeft="5.5dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content"

        android:textColor="#ff333333"
        android:textSize="14sp"
        />
    <View
        android:layout_marginLeft="75.5dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_quest_content"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DDDDDD"
        />
</androidx.constraintlayout.widget.ConstraintLayout>