<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_my_home" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_28">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="我的"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_19"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/but_in_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingVertical="@dimen/dp_5"
                android:src="@drawable/icon_my_setting" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_71"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/dp_20">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image_pic"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_65"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/test_my_pic"
                android:scaleType="centerCrop"
                app:roundAsCircle="true" />

            <LinearLayout
                android:id="@+id/ui_login_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone"
                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="5"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="我的昵称"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_17"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="13800000000"
                        android:textColor="@color/ECF1FE"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_vip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icno_dy_vip" />

                    <TextView
                        android:id="@+id/tv_vip_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="2022.10.11到期"
                        android:textColor="@color/ECF1FE"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ui_outLogin_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录/注册"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="立即登录享受优质体验"
                    android:textColor="@color/ECF1FE"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>


            <ImageView
                android:id="@+id/but_in_edit_user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_8"
                android:src="@drawable/icon_my_bianji" />

            <ImageView
                android:id="@+id/but_in_qr_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_7"
                android:padding="@dimen/dp_8"
                android:src="@drawable/icon_my_qr" />

        </LinearLayout>


    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/but_homepage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_107"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:layout_marginTop="-80dp"
        android:layout_marginBottom="@dimen/dp_10"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_msg_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/color_141414"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="我的消息"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="@dimen/dp_38"
                android:background="@color/color_DDDDDD" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_quan_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/color_141414"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="优惠券"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="@dimen/dp_38"
                android:background="@color/color_DDDDDD" />
            <LinearLayout
                android:id="@+id/my_point_lls"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_jf_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/color_141414"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="我的积分"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.ruffian.library.widget.RLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:divider="@color/color_DDDDDD"
            android:showDividers="middle"
            android:layout_marginHorizontal="@dimen/dp_15"

            >

            <LinearLayout
                android:id="@+id/but_in_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/icon_my_order"
                    android:scaleType="center"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:drawableRight="@drawable/icon_arrow_right_2"
                    android:text="我的订单"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/but_in_choucang"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/icon_my_shoucang"
                    android:scaleType="center"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:drawableRight="@drawable/icon_arrow_right_2"
                    android:text="我的收藏"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/but_in_duihuan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/icon_my_duihuanquan"
                    android:scaleType="center"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:drawableRight="@drawable/icon_arrow_right_2"
                    android:text="我要兑换"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/but_in_wd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/icon_my_wd"
                    android:scaleType="center"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:drawableRight="@drawable/icon_arrow_right_2"
                    android:text="我的问答"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/but_in_yijianfankui"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/icon_my_yijianfankui"
                    android:scaleType="center"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:drawableRight="@drawable/icon_arrow_right_2"
                    android:text="意见反馈"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/but_in_xieyi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/icon_my_yonghuxieyi"
                    android:scaleType="center"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:drawableRight="@drawable/icon_arrow_right_2"
                    android:text="用户协议"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/but_in_changjianwenti"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/icon_my_changjianwenti"
                    android:scaleType="center"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:drawableRight="@drawable/icon_arrow_right_2"
                    android:text="常见问题"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/but_in_yinsi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/icon_my_yinsi"
                    android:scaleType="center"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:drawableRight="@drawable/icon_arrow_right_2"
                    android:text="隐私协议"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/but_in_kefu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/icon_my_kefu"
                    android:scaleType="center"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="联系客服"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:drawablePadding="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:drawableRight="@drawable/icon_arrow_right_2"
                    android:text="400 1234 4321"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/but_in_gywm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:src="@drawable/icon_my_gywm"
                    android:scaleType="center"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:drawableRight="@drawable/icon_arrow_right_2"
                    android:text="关于我们"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>



        </com.ruffian.library.widget.RLinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>