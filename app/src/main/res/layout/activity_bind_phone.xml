<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_124"
            android:lineSpacingMultiplier="1.1"
            android:gravity="center"
            android:text="为了您的账号安全及政策监管要求\n请绑定您的手机号"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15"
            />

        <com.ruffian.library.widget.REditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginHorizontal="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_72"
            app:border_width_normal="@dimen/dp_0_5"
            app:border_color_normal="@color/color_cccccc"
            app:corner_radius="@dimen/dp_50"
            android:paddingHorizontal="@dimen/dp_20"
            android:hint="请输入您的手机号码"
            android:inputType="numberSigned"
            android:maxLength="11"
            android:maxLines="1"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_C2C2C2"
            android:textCursorDrawable="@drawable/edit_cursor_colour"
            android:textSize="@dimen/sp_16" />



        <RelativeLayout
            android:id="@+id/ui_code_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginHorizontal="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_20"

            >




            <com.ruffian.library.widget.REditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:border_width_normal="@dimen/dp_0_5"
                app:border_color_normal="@color/color_cccccc"
                app:corner_radius="@dimen/dp_50"
                android:paddingHorizontal="@dimen/dp_20"
                android:inputType="number"
                android:background="@null"
                android:hint="请输入验证码"
                android:maxLength="4"
                android:maxLines="1"
                android:textColorHint="@color/color_C2C2C2"
                android:textCursorDrawable="@drawable/edit_cursor_colour"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/but_get_code"
                android:layout_width="@dimen/dp_120"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_14"
                android:text="获取验证码"
                android:textColor="@color/mainColor"
                android:layout_alignParentRight="true"
                android:gravity="center"
                />


        </RelativeLayout>




        <com.ruffian.library.widget.RTextView
            android:id="@+id/but_bind"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="@dimen/dp_49"
            android:gravity="center"
            android:text="立即绑定"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            app:background_normal="@color/mainColor"
            app:corner_radius="@dimen/dp_25" />




    </LinearLayout>



</RelativeLayout>