<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F8F8F8"
    android:orientation="vertical"
    tools:context=".ui.questionbank.activity.AnswerReportActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/color_F8F8F8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_F8F8F8"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/circle_rectangle_ffffff_5"
                android:paddingBottom="@dimen/dp_25">

                <TextView
                    android:id="@+id/answer_report_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="初级会计师"
                    android:textColor="@color/color_141414"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/answer_report_second_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="法律基础第一章、第一节"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/answer_report_first_name" />

                <TextView
                    android:id="@+id/answer_report_answer_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="答题数量：36/40"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/answer_report_second_name" />

                <TextView
                    android:id="@+id/answer_report_use_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="用时：36分"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/answer_report_answer_number" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_35"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.bjsn909429077.stz.widget.CircleProgressView
                        android:id="@+id/answer_report_cpv"
                        android:layout_width="@dimen/dp_72"
                        android:layout_height="@dimen/dp_72" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:text="正确率"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/circle_rectangle_ffffff_5"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/max_correct_rate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="100%"
                        android:textColor="@color/color_5AA153"
                        android:textSize="@dimen/sp_20" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_3"
                        android:gravity="center"
                        android:text="全站最高正确率"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/average_correct_rate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="100%"
                        android:textColor="@color/color_E36463"
                        android:textSize="@dimen/sp_20" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_3"
                        android:gravity="center"
                        android:text="全站平均正确率"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/exceed_correct_rate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="100%"
                        android:textColor="@color/color_EF8A39"
                        android:textSize="@dimen/sp_20" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_3"
                        android:gravity="center"
                        android:text="已击败考生"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/circle_rectangle_ffffff_5"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_20">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="客观答题情况"
                    android:textColor="@color/color_141414"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/dp_18">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="答对题数"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/number_of_correct_answers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="33题"
                        android:textColor="@color/color_6483FF"
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_18"
                    android:background="@color/color_DDDDDD" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/dp_18">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="答错题数"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/number_of_wrong_answers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="33题"
                        android:textColor="@color/color_E36463"
                        android:textSize="@dimen/sp_15" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_18"
                    android:background="@color/color_DDDDDD" />

                <TextView
                    android:id="@+id/again_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_marginBottom="@dimen/dp_24"
                    android:background="@drawable/circle_rectangle_5f7dff_5"
                    android:paddingLeft="@dimen/dp_55"
                    android:paddingTop="@dimen/dp_11"
                    android:paddingRight="@dimen/dp_55"
                    android:paddingBottom="@dimen/dp_11"
                    android:text="再次挑战"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/sp_15" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/circle_rectangle_ffffff_5"
                android:paddingBottom="@dimen/dp_24">

                <TextView
                    android:id="@+id/achievement_curve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="成绩曲线"
                    android:textColor="@color/color_141414"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/achievement_curve_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="(正确率%)"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/achievement_curve"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/number_of_questions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@drawable/circle_rectangle_f4f4f4_3"
                    android:paddingLeft="@dimen/dp_17"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_17"
                    android:paddingBottom="@dimen/dp_4"
                    android:text="最近5次"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/achievement_curve_acv_ll"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_180"
                    android:layout_marginTop="@dimen/dp_24"
                    android:orientation="horizontal"
                    app:layout_constraintLeft_toLeftOf="@+id/achievement_curve"
                    app:layout_constraintRight_toRightOf="@+id/number_of_questions"
                    app:layout_constraintTop_toBottomOf="@+id/number_of_questions" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/error_jx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_11"
            android:layout_weight="1"
            android:background="@drawable/circle_rectangle_ea6a76_5"
            android:gravity="center"
            android:text="错题解析"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/all_jx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_11"
            android:layout_weight="1"
            android:background="@drawable/circle_rectangle_5f7dff_5"
            android:gravity="center"
            android:text="全部解析"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>