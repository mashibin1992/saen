<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF"
    android:orientation="vertical"
    tools:context=".ui.home.SortHomeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/icon_sort_back"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/sort_tb_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/dp_6"
            android:text="发布成功"
            android:textColor="#141414"
            android:textSize="19dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.appcompat.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DDDDDD"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="153dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="148dp"
            android:layout_height="102dp"
            android:background="@drawable/icon_q_success"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:text="发布成功"
            android:textColor="#ff333333"
            android:textSize="17sp"
            />
        <LinearLayout
            android:layout_marginLeft="33dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"

            >
            <TextView
                android:id="@+id/tv_show"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="查看问题"
                android:background="@drawable/circle_hollow_rectangle_ffffff_5f7dff_5"
                android:gravity="center"
                android:textColor="#ff5f7dff"
                android:textSize="16sp"
                android:layout_marginRight="20dp"
                />
            <TextView
                android:id="@+id/tv_finish"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/bg_5f7dff_c5"
                android:layout_height="match_parent"
                android:text="返回列表"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                />

        </LinearLayout>
        <ImageView
            android:layout_marginTop="44dp"
            android:layout_width="147dp"
            android:layout_height="147dp"
            android:id="@+id/iv_code"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注公众号，实时了解问题动态"
            android:textColor="#ff666666"
            android:textSize="17sp"
            />
    </LinearLayout>
</LinearLayout>