<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_240"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/circle_rectangle_ffffff_5"
    android:orientation="vertical">

    <!--章节练习-->
    <LinearLayout
        android:id="@+id/practice_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center_horizontal"
            android:text="温馨提示"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center_horizontal"
            android:text="您已经开始做题，请选择"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_13" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginTop="@dimen/dp_22"
            android:background="@color/color_E5E5E5" />

        <TextView
            android:id="@+id/practice_jj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_9"
            android:text="交卷"
            android:textColor="@color/color_5F7DFF"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/color_E5E5E5" />

        <TextView
            android:id="@+id/practice_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_9"
            android:text="停止做题"
            android:textColor="@color/color_5F7DFF"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/color_E5E5E5" />

        <TextView
            android:id="@+id/practice_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_9"
            android:text="继续做题"
            android:textColor="@color/color_5F7DFF"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>

