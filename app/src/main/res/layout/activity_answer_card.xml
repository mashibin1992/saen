<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    tools:context=".ui.questionbank.activity.AnswerCardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_18"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:layout_gravity="center_vertical"
                android:src="@drawable/circle_5d7dff" />

            <TextView
                android:id="@+id/yida_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:text="已答题40道"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:id="@+id/dacuo_iv"
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_14"
                android:src="@drawable/circle_e84432" />

            <TextView
                android:id="@+id/dacuo_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:text="错题3道"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_14"
                android:src="@drawable/circle_d6deff" />

            <TextView
                android:id="@+id/weida_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:text="未答3道"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:layout_width="@dimen/dp_11"
                android:layout_height="@dimen/dp_11"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_14"
                android:src="@drawable/circle_hollow_e8611f_ffffff" />

            <TextView
                android:id="@+id/biaoji_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:text="标记1道"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_13" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@color/color_DDDDDD" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/answer_card_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/answer_card_jj"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_48"
        android:background="@drawable/circle_rectangle_5f7dff_5"
        android:gravity="center"
        android:text="交卷"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/sp_16" />

</LinearLayout>