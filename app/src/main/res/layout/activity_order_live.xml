<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical"
    tools:context=".ui.home.SearchActivity">

    <RelativeLayout
        android:id="@+id/rely"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="21dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="27dp"
        android:background="@drawable/circle_rectangle_ffffff_5"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginLeft="19.5dp"
            android:layout_marginTop="25.5dp"
            android:text="课程信息"
            android:textColor="#ff141414"
            android:textSize="18sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="19.5dp"
            android:layout_marginTop="15dp"
            android:layout_width="237.5dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text=""
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#ff141414"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/tv_pirce"
            android:layout_below="@+id/tv_title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20.5dp"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="#ffe91e14"
            android:textSize="16sp"
            />

        <View
            android:id="@+id/view"
            android:layout_below="@+id/tv_content"
            android:layout_marginTop="21dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15.5dp"
            android:layout_marginRight="12dp"
            android:background="#DDDDDD"
            />
        <TextView
            android:id="@+id/tv_time_1"
            android:layout_below="@+id/view"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="19.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="直播时间"
            android:textColor="#ff333333"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/tv_time"
            android:layout_below="@+id/view"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12.5dp"
            android:layout_marginTop="17dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="#ff666666"
            android:textSize="15sp"
            />

        <TextView
            android:layout_below="@+id/tv_time_1"
            android:layout_marginLeft="19.5dp"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="优惠券"
            android:textColor="#ff333333"
            android:textSize="15sp"
            />
        <LinearLayout
            android:id="@+id/linear_coupon"
            android:paddingRight="12.5dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_time_1"
            android:paddingTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >
            <TextView
                android:id="@+id/tv_coupon"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text=""
                android:textColor="#ffd1323b"
                android:textSize="15sp"
                />
            <ImageView
                android:layout_marginLeft="12dp"
                android:src="@drawable/icon_arrow_right"
                android:layout_width="8dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_below="@+id/linear_coupon"
            android:layout_marginTop="14dp"
            android:paddingLeft="19.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:id="@+id/tv_1"

                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="积分抵扣可抵扣"
                android:textColor="#ff333333"
                android:textSize="15sp"
                />
            <ImageView
                android:layout_marginLeft="4dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_1"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@drawable/icon_jifen"
                />

            <ImageView
                android:id="@+id/iv_jifen"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/icon_select"
                />

        </RelativeLayout>
    </RelativeLayout>

    <include
        android:id="@+id/rely_2"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/rely"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_order_money"

        />
    <include
        android:id="@+id/rely3"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/rely_2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_order_pay"

        />
    <LinearLayout
        android:layout_marginRight="16dp"

        android:layout_below="@+id/rely3"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        >
        <LinearLayout
            android:id="@+id/linear_xieyi"
            android:paddingLeft="16dp"
            android:paddingRight="7dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_xieyi"
            android:layout_gravity="bottom"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/icon_xieyi_false"
            />
        </LinearLayout>
        <TextView
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="已阅读并同意"
            android:textColor="#ff666666"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_xieyi"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:includeFontPadding="false"
            android:text="《课程购买协议》"
            android:textColor="#5F7DFF"
            android:textSize="12sp"
            />

    </LinearLayout>



    <include
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/layout_order_button"

        />

</RelativeLayout>