<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/icon_sort_back"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/sort_tb_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/dp_6"
            android:text="选课中心"
            android:textColor="#141414"
            android:textSize="@dimen/sp_21"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/sort_top_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_16"
            android:src="@drawable/icon_sort_search" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_below="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            app:elevation="0dp"
            android:layout_height="wrap_content"
            android:background="@color/color_FFFFFF"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_scrollFlags="scroll">

                <ImageView
                    android:id="@+id/iv_header"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_240"
                    android:src="@drawable/select_course_header" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_25">

                    <TextView
                        android:layout_width="@dimen/dp_62"
                        android:layout_height="match_parent"
                        android:background="@drawable/select_course_shape_1"
                        android:gravity="center"
                        android:text="教服包邮"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_title_s_course"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_9"
                        android:gravity="center"
                        android:text="注册会计师—考前刷题集训班"
                        android:textColor="@color/color_141414"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_12"
                    android:gravity="center"
                    android:text="考点+好题、口诀+联想、重新认识初级会计"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:id="@+id/ll_price"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_13">

                    <LinearLayout
                        android:id="@+id/ll_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_yang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥"
                            android:textColor="@color/color_ED5F23"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/tv_money"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="998"
                            android:textColor="@color/color_E85050"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_original_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_17"
                        android:layout_toRightOf="@+id/tv_discount"
                        android:text="免费sdf"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_9"
                        android:gravity="center"
                        android:text="(支持分期付款)"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:id="@+id/v_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_22"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@color/color_DDDDDD" />

                <LinearLayout
                    android:id="@+id/ll_course"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/image_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_select_course_present" />

                    <TextView
                        android:id="@+id/tv_courser_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:gravity="center"
                        android:text="高级财务课程 x1"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_courser_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_26"
                        android:gravity="center"
                        android:text="初级财务课程 x1"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_16"
                    android:background="@color/color_DDDDDD" />

                <LinearLayout
                    android:id="@+id/ll_effective"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="有效期"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_date_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_23"
                        android:gravity="center"
                        android:text="购买之日至：2022年5月31日"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_date_2"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_9"
                        android:background="@drawable/select_course_frame_tv"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_4"
                        android:paddingRight="@dimen/dp_4"
                        android:text="36个月"
                        android:textColor="@color/color_617FFF"
                        android:textSize="@dimen/sp_13" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_16">


                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="@dimen/dp_14"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="end"
                            android:src="@drawable/icon_arrow_right" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_style"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_15">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="特色服务"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_housekeeper"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_23"
                        android:gravity="center"
                        android:text="课程管家"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_answer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_9"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_4"
                        android:paddingRight="@dimen/dp_4"
                        android:text="VIP答疑"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_insured_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_9"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_4"
                        android:paddingRight="@dimen/dp_4"
                        android:text="七天保价"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_receive"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_25"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优惠券"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_23"
                        android:gravity="center"
                        android:text="满9800可9折"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_13" />

                    <RelativeLayout
                        android:id="@+id/rl_discount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_16"
                        android:gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/dp_9"
                            android:layout_marginRight="@dimen/dp_9"
                            android:layout_toLeftOf="@+id/image_arrow"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_4"
                            android:paddingRight="@dimen/dp_4"
                            android:text="立即领取"
                            android:textColor="@color/color_617FFF"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:id="@+id/image_arrow"
                            android:layout_width="8dp"
                            android:layout_height="@dimen/dp_14"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="end"
                            android:src="@drawable/icon_arrow_right" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@color/color_F8F8F8"
                   />
            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabBackground="@color/transparent"
                app:tabIconTintMode="add"
                app:tabIndicator="@drawable/tab_indicator_shape"
                app:tabIndicatorColor="@color/color_617FFF"
                app:tabIndicatorFullWidth="false"
                app:tabMaxWidth="0dp"
                app:tabMode="scrollable"
                app:tabRippleColor="@color/transparent"
                app:tabSelectedTextColor="@color/color_141414"
                app:tabTextColor="@color/color_666666" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                app:layout_anchorGravity="bottom"
                android:layout_height="match_parent">

                <com.bjsn909429077.stz.widget.WrapContentHeightViewPager
                    android:id="@+id/fragment_vp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </androidx.core.widget.NestedScrollView>


            <FrameLayout
                android:id="@+id/fl_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_FFFFFF"
       >

        <LinearLayout
            android:id="@+id/ll_cs"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:onClick="customerService">

            <ImageView
                android:id="@+id/image_sc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_31"
                android:src="@drawable/icon_customer_service" />

            <TextView
                android:id="@+id/tv_cs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/image_sc"
                android:text="客服"
                android:textColor="@color/color_5F7DFF"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

        <TextView
            android:layout_marginBottom="@dimen/dp_30"
            android:id="@+id/btn_baoming"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_toRightOf="@+id/ll_cs"
            android:background="@drawable/select_course_btn_shape"
            android:gravity="center"
            android:text="@string/sig_up_now"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/sp_15" />

    </RelativeLayout>

</RelativeLayout>