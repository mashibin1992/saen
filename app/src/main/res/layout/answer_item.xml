<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_20"
    android:background="@drawable/circle_rectangle_ffffff_5">

    <TextView
        android:id="@+id/answer_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_21"
        android:text="初级会计"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/answer_item_pb"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="@dimen/dp_210"
        android:layout_height="@dimen/dp_13"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dp_24"
        android:max="100"
        android:progress="20"
        android:progressDrawable="@drawable/layer_list_progress_drawable"
        app:layout_constraintLeft_toLeftOf="@+id/answer_item_name"
        app:layout_constraintTop_toTopOf="@+id/answer_item_jd"
        app:layout_constraintBottom_toBottomOf="@+id/answer_item_jd"/>

    <TextView
        android:id="@+id/answer_item_jd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:textSize="@dimen/sp_12"
        android:text="12/23"
        android:layout_marginLeft="@dimen/dp_24"
        android:textColor="@color/color_999999"
        app:layout_constraintLeft_toRightOf="@+id/answer_item_pb"
        app:layout_constraintTop_toBottomOf="@+id/answer_item_name" />

    <ImageView
        android:id="@+id/answer_item_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="@+id/answer_item_jd"
        android:src="@drawable/answer_item_edit"/>

</androidx.constraintlayout.widget.ConstraintLayout>