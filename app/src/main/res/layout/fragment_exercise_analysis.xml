<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/interpretation_question_sv"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F8F8F8"
        android:orientation="vertical">

        <!--判断题-->
        <LinearLayout
            android:id="@+id/interpretation_question_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/interpretation_question_stem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_26"
                android:text="1、资本循环中实现价值的增值阶段是（）"
                android:textColor="@color/color_141414"
                android:textSize="@dimen/sp_15" />

            <!--题目选项-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/interpretation_question_option_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12" />
        </LinearLayout>

        <!--单选，多选-->
        <LinearLayout
            android:id="@+id/objective_question_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/exercise_analysis_stem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_26"
                android:text="1、资本循环中实现价值的增值阶段是（）"
                android:textColor="@color/color_141414"
                android:textSize="@dimen/sp_15" />

            <!--题目选项-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/exercise_analysis_option_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_marginTop="@dimen/dp_12" />

        </LinearLayout>

        <!--判断，单选，多选描述部分-->
        <LinearLayout
            android:id="@+id/objective_question_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_74"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/circle_rectangle_ffffff_5"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="您的作答"
                        android:textColor="@color/color_E84423"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/your_answer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="A"
                        android:textColor="@color/color_E84423"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_0_5"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:background="@color/color_DDDDDD" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="正确答案"
                        android:textColor="@color/color_387CEF"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/right_answer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="A"
                        android:textColor="@color/color_387CEF"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_0_5"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:background="@color/color_DDDDDD" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="全站正确率"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/all_correct_rate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="A"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_74"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/circle_rectangle_ffffff_5"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_22"
                android:paddingRight="@dimen/dp_22">

                <TextView
                    android:id="@+id/total_answer_to_this_question"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_weight="1"
                    android:text="本题总答题：0次"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/number_of_right_answers"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="答对：0次"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/number_of_error_answers"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="答错：0次"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/this_question_orrect_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="正确率：0次"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <!--简答题-->
        <LinearLayout
            android:id="@+id/subjective_question_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/circle_rectangle_e6ebff_2"
                android:padding="@dimen/dp_6"
                android:text="主观题"
                android:textColor="@color/color_5F7DFF"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/subjective_question_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:text="看看地空导弹看到的大口大口大口大口大口大口大开空调开到滴滴答答滴滴答答滴滴答答滴滴答答滴滴答答滴滴答答"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/circle_rectangle_ffffff_5"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="回答"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subjective_question_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="大口大口大开的大口大口"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

        </LinearLayout>

        <!--文字解析，视频解析，考点-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/exercise_analysis_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_marginRight="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_20" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>