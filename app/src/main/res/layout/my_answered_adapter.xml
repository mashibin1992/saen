<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16">

    <ImageView
        android:id="@+id/my_answer_item_photo"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/my_answer_item_content"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_8"
        android:text="老师，请问一下，6月份采购一批材料，已付"
        android:textColor="@color/color_141414"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toRightOf="@+id/my_answer_item_photo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/my_answer_item_photo" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_answer_item_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_13"
        app:layout_constraintLeft_toLeftOf="@+id/my_answer_item_content"
        app:layout_constraintTop_toBottomOf="@+id/my_answer_item_photo" />

    <ImageView
        android:id="@+id/my_answer_item_icon"
        android:layout_width="@dimen/dp_23"
        android:layout_height="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_14"
        app:layout_constraintLeft_toLeftOf="@+id/my_answer_item_rv"
        app:layout_constraintTop_toBottomOf="@+id/my_answer_item_rv" />

    <TextView
        android:id="@+id/my_answer_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:text="好的"
        android:textColor="@color/color_4C4C4C"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="@+id/my_answer_item_icon"
        app:layout_constraintLeft_toRightOf="@+id/my_answer_item_icon"
        app:layout_constraintTop_toTopOf="@+id/my_answer_item_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_6"
        android:text="解答"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_13"
        app:layout_constraintBottom_toBottomOf="@+id/my_answer_item_icon"
        app:layout_constraintLeft_toRightOf="@+id/my_answer_item_name"
        app:layout_constraintTop_toTopOf="@+id/my_answer_item_icon" />

    <TextView
        android:id="@+id/my_answer_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_6"
        android:text="73阅读 ｜07-02"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_13"
        app:layout_constraintBottom_toBottomOf="@+id/my_answer_item_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/my_answer_item_icon" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/color_DDDDDD"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_answer_item_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>