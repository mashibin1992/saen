<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_zj"
    android:fitsSystemWindows="true"
    tools:context=".ui.home.SortGuideActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingBottom="75dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/dp_33"
                android:layout_height="@dimen/dp_60"
                android:layout_marginLeft="16dp"
                android:src="@drawable/icon_arrow_lift"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/iv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="60dp"
                android:layout_width="79dp"
                android:layout_height="79dp"


                />
            <TextView
                android:id="@+id/tv"
                android:layout_width="47.5dp"
                android:layout_height="21dp"
                android:gravity="center"
                android:background="@drawable/bg_f8ab50_c12"
                android:text="专家"
                android:layout_marginTop="66.5dp"
                app:layout_constraintTop_toTopOf="@id/iv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_above="@id/iv"
                android:textColor="#ffffffff"
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_marginTop="14dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="谢敏"
                android:textColor="#ffffffff"
                android:textSize="17sp"
                />
            <RelativeLayout
                android:background="@drawable/bg_ffffff_c15_2"
                android:layout_marginTop="41dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_name"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:id="@+id/view1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="37dp"
                    android:layout_width="4dp"
                    android:layout_height="20.5dp"
                    android:background="@drawable/icon_wenda4"
                    />
                <TextView
                    android:id="@+id/tv1"
                    android:layout_toRightOf="@+id/view1"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="34.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="擅长领域"
                    android:textStyle="bold"
                    android:textColor="#ff424242"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/tv_lingyu"
                    android:layout_marginLeft="33.5dp"
                    android:layout_marginRight="13.5dp"
                    android:layout_below="@+id/tv1"
                    android:layout_marginTop="9dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="热爱学习生"
                    android:textColor="#ff666666"
                    android:textSize="14sp"
                    />


                <View
                    android:id="@+id/view2"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="22.5dp"
                    android:layout_width="4dp"
                    android:layout_height="20.5dp"
                    android:layout_below="@+id/tv_lingyu"
                    android:background="@drawable/icon_wenda4"
                    />
                <TextView
                    android:id="@+id/tv2"
                    android:layout_toRightOf="@+id/view1"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_lingyu"
                    android:includeFontPadding="false"
                    android:text="简介"
                    android:textStyle="bold"
                    android:textColor="#ff424242"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/tv_jianjie"
                    android:layout_marginLeft="33.5dp"
                    android:layout_marginRight="13.5dp"
                    android:layout_below="@+id/tv2"
                    android:layout_marginTop="9dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="女，教授，"
                    android:textColor="#ff717171"
                    android:textSize="14sp"
                    />
                <View
                    android:id="@+id/view3"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="22.5dp"
                    android:layout_width="4dp"
                    android:layout_height="20.5dp"
                    android:layout_below="@+id/tv_jianjie"
                    android:background="@drawable/icon_wenda4"
                    />
                <TextView
                    android:id="@+id/tv3"
                    android:layout_toRightOf="@+id/view1"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_jianjie"
                    android:includeFontPadding="false"
                    android:text="他的回答"
                    android:textStyle="bold"
                    android:textColor="#ff424242"
                    android:textSize="18sp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_below="@+id/tv3"
                    tools:listitem="@layout/item_zj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>