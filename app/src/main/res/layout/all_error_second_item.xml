<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_F8F8F8">

    <TextView
        android:id="@+id/all_error_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_33"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:text="第一节"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/all_error_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:text="错题12个"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@+id/all_error_name"
        app:layout_constraintRight_toLeftOf="@+id/all_error_redo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/all_error_redo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/circle_rectangle_da555f_2"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_5"
        android:text="重做"
        android:textColor="@color/color_FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/all_error_name"
        app:layout_constraintRight_toLeftOf="@+id/all_error_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/all_error_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_18"
        android:src="@drawable/all_error_iv"
        app:layout_constraintBottom_toBottomOf="@+id/all_error_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/all_error_name" />

</androidx.constraintlayout.widget.ConstraintLayout>