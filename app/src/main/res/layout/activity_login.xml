<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_68"
            android:layout_height="@dimen/dp_68"
            android:src="@drawable/icon_login_logo"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/dp_69"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="萨恩教育"
            android:textColor="@color/color_141414"
            android:textSize="@dimen/sp_21"
            android:textStyle="bold" />

        <com.ruffian.library.widget.REditText
            android:id="@+id/phoneNum"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginHorizontal="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_40"
            app:border_width_normal="@dimen/dp_0_5"
            app:border_color_normal="@color/color_cccccc"
            app:corner_radius="@dimen/dp_50"
            android:paddingHorizontal="@dimen/dp_20"
            android:hint="请输入您的手机号码"
            android:inputType="numberSigned"
            android:maxLength="11"
            android:maxLines="1"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_C2C2C2"
            android:textCursorDrawable="@drawable/edit_cursor_colour"
            android:textSize="@dimen/sp_16" />

        <com.ruffian.library.widget.REditText
            android:id="@+id/et_password"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginHorizontal="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_20"
            app:border_width_normal="@dimen/dp_0_5"
            app:border_color_normal="@color/color_cccccc"
            app:corner_radius="@dimen/dp_50"
            android:paddingHorizontal="@dimen/dp_20"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="18"
            android:maxLines="1"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_C2C2C2"
            android:textCursorDrawable="@drawable/edit_cursor_colour"
            android:textSize="@dimen/sp_16" />


        <RelativeLayout
            android:id="@+id/ui_code_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginHorizontal="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_20"

            >




            <com.ruffian.library.widget.REditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:border_width_normal="@dimen/dp_0_5"
                app:border_color_normal="@color/color_cccccc"
                app:corner_radius="@dimen/dp_50"
                android:paddingHorizontal="@dimen/dp_20"
                android:inputType="number"
                android:background="@null"
                android:hint="请输入验证码"
                android:maxLength="4"
                android:maxLines="1"
                android:textColorHint="@color/color_C2C2C2"
                android:textCursorDrawable="@drawable/edit_cursor_colour"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/but_get_code"
                android:layout_width="@dimen/dp_120"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_14"
                android:text="获取验证码"
                android:textColor="@color/mainColor"
                android:layout_alignParentRight="true"
                android:gravity="center"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginHorizontal="@dimen/dp_45"
            >

            <TextView
                android:id="@+id/but_qh_mmdl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:text="切换密码登录"
                android:textColor="@color/color_333333"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_10"
                />

            <TextView
                android:id="@+id/but_wjmm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:layout_alignParentRight="true"
                android:text="找回密码？"
                android:textColor="@color/color_888888"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_10"
                />


        </RelativeLayout>



        <com.ruffian.library.widget.RTextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="center"
            android:text="立即登录"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            app:background_normal="@color/mainColor"
            app:corner_radius="@dimen/dp_25" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666666"
                android:text="其他账号登录"
                android:textSize="@dimen/sp_14"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_36"
                />

            <ImageView
                android:id="@+id/but_wx_login"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:src="@drawable/icon_wx_logo"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/image_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3.5dp"
            android:src="@drawable/icon_login_select_n" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意并签署"
            android:textColor="@color/color_666666"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/userAgreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户协议》"
            android:textColor="@color/mainColor"
            android:textSize="11sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和"
            android:textColor="@color/color_666666"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/policyPrivacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《隐私政策》"
            android:textColor="@color/mainColor"
            android:textSize="11sp" />


    </LinearLayout>

</RelativeLayout>