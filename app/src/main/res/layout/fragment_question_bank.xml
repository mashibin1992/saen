<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/question_back_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_38"
                android:drawableRight="@drawable/question_back_choose"
                android:drawablePadding="@dimen/dp_6"
                android:text="初级"
                android:textColor="#141414"
                android:textSize="@dimen/sp_21"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/question_back_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#DDDDDD"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/question_back_title" />

            <LinearLayout
                android:id="@+id/question_back_ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_24"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/question_back_view">

                <TextView
                    android:id="@+id/question_back_first_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="初级财务管理"
                    android:textColor="#3A3A3A"
                    android:textSize="@dimen/sp_19" />

                <TextView
                    android:id="@+id/question_back_second_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:text="初级财务实务"
                    android:textColor="#717171"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/question_back_ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/question_back_ll1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.bjsn909429077.stz.widget.CircleProgressView
                        android:id="@+id/question_back_dts"
                        android:layout_width="@dimen/dp_61"
                        android:layout_height="@dimen/dp_61" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="答题数"
                        android:textColor="#717171"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.bjsn909429077.stz.widget.CircleProgressView
                        android:id="@+id/question_back_cts"
                        android:layout_width="@dimen/dp_61"
                        android:layout_height="@dimen/dp_61" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="错题数"
                        android:textColor="#717171"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.bjsn909429077.stz.widget.CircleProgressView
                        android:id="@+id/question_back_zql"
                        android:layout_width="@dimen/dp_61"
                        android:layout_height="@dimen/dp_61" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="正确率"
                        android:textColor="#717171"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.bjsn909429077.stz.widget.CircleProgressView
                        android:id="@+id/question_back_zts"
                        android:layout_width="@dimen/dp_61"
                        android:layout_height="@dimen/dp_61" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="总题数"
                        android:textColor="#717171"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/question_back_time_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_17"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/question_back_ll2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:drawableLeft="@drawable/question_back_time"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="累计做题时长为"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/question_back_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="1时36分"
                    android:textColor="@color/color_3A3A3A"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:id="@+id/question_back_view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_16"
                android:background="#F8F8F8"
                app:layout_constraintTop_toBottomOf="@+id/question_back_time_ll" />

            <LinearLayout
                android:id="@+id/question_back_ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/question_back_view1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/question_back_zjlx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/question_back_zjlx"
                        android:drawablePadding="@dimen/dp_6"
                        android:gravity="center"
                        android:text="章节练习"
                        android:textColor="#3A3A3A"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/question_free"
                        app:layout_constraintRight_toRightOf="@+id/question_back_zjlx"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/question_back_zxlx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/question_back_zxlx"
                        android:drawablePadding="@dimen/dp_6"
                        android:gravity="center"
                        android:text="专项练习"
                        android:textColor="#3A3A3A"
                        android:textSize="@dimen/sp_14"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/question_free"
                        app:layout_constraintRight_toRightOf="@+id/question_back_zxlx"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/question_back_lnzt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/question_back_lnzt"
                    android:drawablePadding="@dimen/dp_6"
                    android:gravity="center"
                    android:text="历年真题"
                    android:textColor="#3A3A3A"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/question_back_mnsj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/question_back_mnsj"
                    android:drawablePadding="@dimen/dp_6"
                    android:gravity="center"
                    android:text="模拟试卷"
                    android:textColor="#3A3A3A"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/question_back_ll4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/question_back_ll3">

                <TextView
                    android:id="@+id/question_back_kqyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/question_back_kqyt"
                    android:drawablePadding="@dimen/dp_6"
                    android:gravity="center"
                    android:text="考前押题"
                    android:textColor="#3A3A3A"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/question_back_ctb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/question_back_ctb"
                    android:drawablePadding="@dimen/dp_6"
                    android:gravity="center"
                    android:text="错题本"
                    android:textColor="#3A3A3A"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/question_back_xtsc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/question_back_xtsc"
                    android:drawablePadding="@dimen/dp_6"
                    android:gravity="center"
                    android:text="习题收藏"
                    android:textColor="#3A3A3A"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/question_back_ztjl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/question_back_ztjl"
                    android:drawablePadding="@dimen/dp_6"
                    android:gravity="center"
                    android:text="做题记录"
                    android:textColor="#3A3A3A"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:id="@+id/question_back_view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_25"
                android:background="#F8F8F8"
                app:layout_constraintTop_toBottomOf="@+id/question_back_ll4" />

            <LinearLayout
                android:id="@+id/question_back_ll5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/question_back_view2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_56"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/question_back_second_bg"
                            android:layout_width="@dimen/dp_68"
                            android:layout_height="@dimen/dp_68"
                            android:src="@drawable/second_bg"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/question_back_second_photo"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_2"
                            app:layout_constraintBottom_toBottomOf="@+id/question_back_second_bg"
                            app:layout_constraintLeft_toLeftOf="@+id/question_back_second_bg" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/question_back_user1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="初考必过"
                        android:textColor="#636363"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/question_back_num1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="80道题"
                        android:textColor="#636363"
                        android:textSize="@dimen/sp_18" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/question_back_first_bg"
                            android:layout_width="@dimen/dp_68"
                            android:layout_height="@dimen/dp_68"
                            android:src="@drawable/first_bg"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/question_back_first_photo"
                            android:layout_width="@dimen/dp_48"
                            android:layout_height="@dimen/dp_48"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:layout_marginBottom="@dimen/dp_2"
                            app:layout_constraintBottom_toBottomOf="@+id/question_back_first_bg"
                            app:layout_constraintLeft_toLeftOf="@+id/question_back_first_bg" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/question_back_user2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="初考必过"
                        android:textColor="#636363"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/question_back_num2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="80道题"
                        android:textColor="#636363"
                        android:textSize="@dimen/sp_18" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_83"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/question_back_third_bg"
                            android:layout_width="@dimen/dp_68"
                            android:layout_height="@dimen/dp_68"
                            android:src="@drawable/third_bg"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/question_back_third_photo"
                            android:layout_width="@dimen/dp_50"
                            android:layout_height="@dimen/dp_50"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_2"
                            app:layout_constraintBottom_toBottomOf="@+id/question_back_third_bg"
                            app:layout_constraintLeft_toLeftOf="@+id/question_back_third_bg" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/question_back_user3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="初考必过"
                        android:textColor="#636363"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/question_back_num3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="80道题"
                        android:textColor="#636363"
                        android:textSize="@dimen/sp_18" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>