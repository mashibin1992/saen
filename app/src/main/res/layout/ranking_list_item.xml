<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_68">

    <TextView
        android:id="@+id/ranking_item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ranking_item_photo"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44"
        app:layout_constraintLeft_toRightOf="@+id/ranking_item_number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/dp_14"
        android:src="@drawable/question_back_ztjl"/>

    <TextView
        android:id="@+id/ranking_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textColor="#141414"
        android:textSize="@dimen/sp_17"
        android:layout_marginLeft="@dimen/dp_15"
        app:layout_constraintLeft_toRightOf="@+id/ranking_item_photo"
        app:layout_constraintTop_toTopOf="@+id/ranking_item_photo" />


    <TextView
        android:id="@+id/ranking_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textColor="#999999"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_15"
        app:layout_constraintBottom_toBottomOf="@+id/ranking_item_photo"
        app:layout_constraintLeft_toRightOf="@+id/ranking_item_photo"/>

</androidx.constraintlayout.widget.ConstraintLayout>